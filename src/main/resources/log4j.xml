<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="#[%5p] %d{yyyy-MM-dd HH:mm:ss} (%F:%L) %m%n" />
		</layout>
	</appender>

	<appender name="sshsample" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${user.home}/logs/ssh2sample.log" />
		<param name="Encoding" value="UTF-8" />
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<!-- <param name="MaxFileSize" value="100120KB" /> -->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS}-[%p] %m      |[%c:%L][%t]%n" />
		</layout>
	</appender>

	<appender name="profile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${user.home}/logs/profile.log" />
		<param name="Encoding" value="UTF-8" />
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%5p] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %m%n" />
		</layout>
	</appender>
	
	
	<logger name="com">
		<level value="INFO"></level>
	</logger>
	<logger name="org">
		<level value="INFO"></level>
	</logger>

	<logger name="org.apache.commons">
		<level value="ERROR"></level>
	</logger>
	<logger name="org.apache.struts2">
		<level value="ERROR"></level>
	</logger>
	<logger name="com.opensymphony.xwork2">
		<level value="ERROR"></level>
	</logger>
	<logger name="com.opensymphony">
		<level value="ERROR"></level>
	</logger>
	<logger name="org.springframework">
		<level value="INFO"></level>
	</logger>
	<logger name="org.hibernate">
		<level value="INFO"></level>
	</logger>
	
	<logger name="com.kelvem.common.profile" additivity="false">
		<level value="INFO"></level>
		<appender-ref ref="profile" />
	</logger>
 
	<root>
		<appender-ref ref="stdout" />
		<appender-ref ref="sshsample" />
	 	 
	</root>
</log4j:configuration>
